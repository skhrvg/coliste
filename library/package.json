{
  "name": "yourlib",
  "type": "module",
  "version": "1.0.0",
  "description": "A Vue 3 component library",
  "author": {
    "name": "Gleb Sakharov",
    "url": "https://github.com/skhrvg"
  },
  "license": "MIT",
  "homepage": "https://github.com/skhrvg/yourlib/tree/main/#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skhrvg/yourlib.git"
  },
  "bugs": {
    "url": "https://github.com/skhrvg/yourlib/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/yourlib.es.js",
      "require": "./dist/yourlib.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "main": "./dist/yourlib.umd.js",
  "module": "./dist/yourlib.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "run-p build:clean build:vite:watch types:gen:watch",
    "build": "run-s types:check build:clean build:vite types:gen",
    "build:vite": "vite build",
    "build:vite:watch": "vite build --watch",
    "build:clean": "rimraf dist",
    "types:check": "vue-tsc --build --force",
    "types:gen": "vue-tsc --project tsconfig.lib.json",
    "types:gen:watch": "vue-tsc --project tsconfig.lib.json --watch"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/tsconfig": "^0.5.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  }
}
