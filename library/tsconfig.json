{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "outDir": "./dist",
    "types": ["node"],
    "sourceMap": true,
    "useDefineForClassFields": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
